{ 
  "name": "chrome-alex",
  "description": "Alexjs plugin for Chrome",
  "version": "0.2.1",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js", "alex.min.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Check your empathy!",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}